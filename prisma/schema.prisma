generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       String @id @default(uuid())
  clerkId   String @default(cuid()) @unique
  firstName String
  lastName String
  email    String
  posts    Post[]
}

model Post {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  createdBy   User   @relation(fields: [createdById], references: [clerkId])
  createdById String
  @@index([imageUrl])
}